<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workingmap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The following two permissions are not required to use
	     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ghosticon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDoo411oRMXB7zovmX_5sA94qLFFUdrGkI" />

        <activity
            android:name="com.example.workingmap.PlayGame"
            android:label="@string/app_name"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name="com.example.workingmap.ButtonTest"
            android:label="@string/title_activity_button_test"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.example.workingmap.Scanner"
            android:label="@string/title_activity_scanner" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
         <activity
            android:name="com.example.workingmap.SplashScreen"
            android:label="@string/title_activity_splash_screen" 
           android:screenOrientation="landscape" 
           android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
        </activity>
        <activity
            android:name="com.example.workingmap.MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">

        </activity>
        <activity
            android:name="com.example.workingmap.OptionsMenu"
            android:label="@string/title_activity_options_menu"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name="com.example.workingmap.GameOver"
            android:label="@string/title_activity_game_over"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name="com.example.workingmap.PauseGame"
            android:label="@string/title_activity_pause_game"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name="com.example.workingmap.StatisticsScreen"
            android:label="@string/title_activity_statistics_screen"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name="com.example.workingmap.ItemStore"
            android:label="@string/title_activity_item_store"
            android:screenOrientation="landscape" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
    </application>

</manifest>
